{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "sourceMap": false,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "lib": ["ES2022"],
    "target": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },

  "include": ["./graphql/**/*.ts", "./util/**/*.ts"]
}
